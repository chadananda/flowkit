# Article Writer API Keys
# Copy this file to .env and fill in your API keys

# Required API Keys
OPENAI_API_KEY=your_openai_api_key_here

# Optional API Keys (fallback available if not provided)
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Optional Configuration
DEFAULT_MODEL=gpt-4                # Default LLM model
DEFAULT_TEMPERATURE=0.7            # Default temperature for LLM calls
OUTPUT_DIR=./output                # Custom output directory